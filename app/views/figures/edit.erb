<h1>Update Figure</h1>

<h2>Edits for <%= @figure.name %></h2>

<form method="POST" action="/figures/<%= @figure.id %>">
<input type="hidden" id="hidden" name="_method" value="PATCH">

<label for="figure_name">New Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
<br><br>

<label><strong>Choose an existing title:</strong></label>
<br>
<% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %><br>
    <% end %>
<br>

<label><h3>and/or, create a new title:</h3></label>
<label for="new_title">Title Name:</label>
    <input type="text" name="title[name]" id="new_title">
<br><br>

<label><strong>Choose an existing landmark:</strong></label>
<br>
<% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>, <%= landmark.year_completed %><br>
    <% end %>
<br>

<label><h3>and/or, create a new landmark:</h3></label>
<label for="new_landmark">Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
<br>
<label for="landmark_year_completed">Landmark Year Completed:</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completer">
<br><br>

<input type="submit" value="Edit Figure">

</form>